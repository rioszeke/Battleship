<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.utep.cs.cs4330.battleship.placeShipsBTFragment">
    <!--Note to self and future improvements: find a way to reuse difficulty fragment by swapping out buttons-->
    <LinearLayout
        android:id="@+id/topLayoutBT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true">
        <edu.utep.cs.cs4330.battleship.SelectShipsView
            android:id="@+id/shipsToPlaceBT"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="130dp"
            android:layout_marginTop="10dp" />
        <Button
            android:id="@+id/placeShips_done_btn"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:onClick="doneClicked"/>

    </LinearLayout>

    <edu.utep.cs.cs4330.battleship.PlacedShipsView
        android:layout_below="@id/topLayoutBT"
        android:id="@+id/placedShipsViewBT"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>


</RelativeLayout>
